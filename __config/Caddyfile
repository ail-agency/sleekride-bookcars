{
    auto_https off
}

http://localhost:8001 {

    handle /api/* {
        reverse_proxy http://api:4002
    }

    handle /_cdn {
        root /var/www/cdn
        file_server
    }

    handle /* {
        reverse_proxy http://frontend:80
    }
}

http://localhost:8002 {
    handle /api/* {
        reverse_proxy http://api:4002
    }

    handle /_cdn {
        root /var/www/cdn
        file_server
    }

    handle /* {
        reverse_proxy http://backoffice:80
    }
}
